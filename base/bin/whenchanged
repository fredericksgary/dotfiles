#!/usr/bin/env bash

# Usage: whenchanged somefile a shell command

FILE=$1
shift
CMD="$@"

MODTIME=`stat -c %Y $FILE`

"$@"

while :
do
  sleep 0.3
  NEW_MODTIME=`stat -c %Y $FILE`
  if [ "$NEW_MODTIME" -gt "$MODTIME" ]
    then
    echo "File updated, re-running..."
    "$@"
  fi
  MODTIME=$NEW_MODTIME
done
